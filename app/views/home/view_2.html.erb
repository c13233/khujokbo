<header class="header">
  <div class="logo-area">
    <a href="/home/index">
      <h1>경희<span>족</span>닷컴</h1>
    </a>
  </div>
  <div class="etc-area">
    <a href = "/home/create">
    <button class="btn btn-write">
      족보 기부하기
    </button>
    </a>
  </div>
</header>
<main class="main">
  <div class="wrapper recent-group view-result-group">
    <h2>족보 검색 결과</h2>
    <div class="wrapper banner-group">
      <div class="bold-area">
        <p>
          "<%= @post_course_name %>" 족보 검색 결과
        </p>
        <p>
          <%= @post_course_count %>
          <span>개의 족보가 기부 됨</span>
        </p>
      </div>
    </div>
    <div class="subject-components clearfix">
      <% @post_course.each do |t| %>
        <div class="subject-card">
          <a href="#">
            <div class="card-container">
              <dl>
                <dt>
                  <%= t.course %>
                </dt>
                <dd>
                  <%= t.prof %>
                </dd>
                <dd>
                  <%= t.semester %>
                </dd>
              </dl>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</main>
<footer class="footer">
  <div class="copy-component">
    <p>© 2018 경희족닷컴 ALL RIGHTS RESERVED.</p>
    <a class="email" href="#">
      khujokbo@gmail.com
    </a>
    <a href="#">
      <div class="top animation-container">
        top
      </div>
    </a>
  </div>
</footer>
